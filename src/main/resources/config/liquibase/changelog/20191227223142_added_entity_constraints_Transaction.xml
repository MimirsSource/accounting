<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Transaction.
    -->
    <changeSet id="20191227223142-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="from_ledger_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction_from_ledger_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ledger"/>

        <addForeignKeyConstraint baseColumnNames="to_ledger_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction_to_ledger_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ledger"/>

        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

    </changeSet>
</databaseChangeLog>
